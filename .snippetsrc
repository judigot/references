#!/bin/bash
function helloWorld() {
    echo -e "\e[32mHello, World!\e[0m" # Green
}
alias hi='helloWorld'
alias hello='helloWorld'

function bigBangVite() {
    curl -L "https://raw.githubusercontent.com/judigot/references/main/BigBangVite.sh" | bash
}
alias bbv='bigBangVite'
alias bigbangvite='bigBangVite'

function updateRCFiles() {
    curl -sL https://raw.githubusercontent.com/judigot/references/main/.bashrc -o "$HOME/.bashrc"
    curl -sL https://raw.githubusercontent.com/judigot/references/main/.zshrc -o "$HOME/.zshrc"
    curl -sL https://raw.githubusercontent.com/judigot/references/main/.snippetsrc -o "$HOME/.snippetsrc"
}
alias update='updateRCFiles'
alias updatercfiles='updateRCFiles'
alias updateRCFiles='updateRCFiles'
alias updatebashsnippets='updateRCFiles'