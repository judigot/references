#!/bin/bash
function helloWorld() {
    echo -e "\e[32mHello, World!\e[0m" # Green
}
alias hi='helloWorld'
alias hello='helloWorld'

function bigBangVite() {
    curl -L "https://raw.githubusercontent.com/judigot/references/main/BigBangVite.sh" | bash
}
alias bbv='bigBangVite'
alias bigbangvite='bigBangVite'

function updateSnippetsRC() {
    curl -L https://raw.githubusercontent.com/judigot/references/main/.snippetsrc -o $HOME/.snippetsrc
}
alias updatebashsnippets='updateSnippetsRC'
alias updatesnippetsrc='updateSnippetsRC'